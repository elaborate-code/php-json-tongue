{
    "name": "elaborate-code/php-json-tongue",
    "description": "A Facade for loading localization data from JSONs within a lang folder",
    "type": "library",
    "keywords": [
        "localization",
        "internationalization",
        "locale",
        "translation",
        "languages",
        "json"
    ],
    "license": "MIT",
    "homepage": "https://github.com/elaborate-code/php-json-tongue",
    "authors": [
        {
            "name": "Mohamed Ilies BOUDOUMA",
            "email": "medilies.contact@gmail.com"
        }
    ],
    "require": {
        "php": "^8.1"
    },
    "require-dev": {
        "pestphp/pest": "^1.22",
        "laravel/pint": "^1.2",
        "phpstan/extension-installer": "^1.1",
        "phpstan/phpstan-deprecation-rules": "^1.0",
        "phpstan/phpstan-phpunit": "^1.0"
    },
    "autoload": {
        "files": [
            "src/Helpers/helpers.php"
        ],
        "psr-4": {
            "ElaborateCode\\JsonTongue\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "ElaborateCode\\JsonTongue\\Tests\\JsonFaker\\": "tests/JsonFaker"
        }
    },
    "scripts": {
        "analyse": "vendor/bin/phpstan analyse",
        "test": "vendor/bin/pest",
        "test-coverage": "vendor/bin/pest --coverage",
        "format": "vendor/bin/pint"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "phpstan/extension-installer": true
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
